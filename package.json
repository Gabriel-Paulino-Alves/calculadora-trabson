{
  "name": "calculadora-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
  "start": "http-server public -p 8080 -a 0.0.0.0 -c-1",
  "test:unit": "jest --coverage --coverageDirectory=coverage/unit",
  "test:integration": "jest --config=jest.integration.config.js",
  "test": "npm run test:unit && npm run test:integration",
  "test:e2e": "cypress run",
  "test:e2e:ci": "start-server-and-test 'npm run start' http://localhost:8080 'npm run test:e2e'"
}
,
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.7",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "7.31.2",
    "@testing-library/jest-dom": "5.11.10",
    "cypress": "^8.7.0",
    "http-server": "^0.12.3",
    "istanbul-lib-coverage": "^3.2.2",
    "jest": "26.6.3",
    "jsdom": "16.7.0",
    "serve": "^11.3.2",
    "start-server-and-test": "^2.1.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/tests/e2e/",
      "/cypress/"
    ]
  }
}